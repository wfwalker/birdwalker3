<% @page_title = @county.name + " County" %>

<div id="pagebody">
	<div id="pageheader-location">
		<div id="pagetitle"><%= @page_title %></div>
		<div class="pageheaderitem"><%= link_to @county.state.name, state_url(@county.state) %></div>
	</div>

	<div id="pagecontent">
		<table>
			<tr>
				<td>Species</td>
				<% for year in (1996..2008) do %>
					<td align="right"><%= year %></td>
				<% end %>
			</tr>
			<tr>
				<td>Total</td>
				<% for year in (1996..2008) do %>
					<td align="right"><%= @totals[year] %></td>
				<% end %>
			</tr>
			<% for key in Species.sort_taxonomic(@map.keys) %>
				<tr valign="top">
					<td><%= key.common_name %></td>
					<% for year in (1996..2008) do %>
						<td align="center"><%= @map[key][year] %></td>
					<% end %>
				</tr>
			<% end %>
			<tr>
				<td>Total</td>
				<% for year in (1996..2008) do %>
					<td align="right"><%= @totals[year] %></td>
				<% end %>
			</tr>
			<tr>
				<td>Species</td>
				<% for year in (1996..2008) do %>
					<td align="right"><%= year %></td>
				<% end %>
			</tr>
		</table>
	</div>
</div>
