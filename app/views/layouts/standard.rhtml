<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
		<%= stylesheet_link_tag 'stylesheet'%>
		<%= javascript_include_tag :defaults %>
		<%= javascript_include_tag 'lib/yui-utilities.js', 'adapter/shadowbox-yui.js', 'shadowbox'  %>  
		<%= javascript_tag "window.onload = function(){ Shadowbox.init(); };" %>
		
        <title>birdWalker | <%= @page_title %></title>
    </head>
    <body onload="google_initialize()">
        <div id="menu">
			<div>
				<img src="/images/topleft1.jpg" width="120" height="100"/>
			</div>
			<div class="menuitem">
				<form action="/bird_walker/search" method="post">
					<% if (@terms == nil) then @terms = "search" end %>
					<input size="10" onclick="select()" type="text" name="terms" value="<%= @terms %>"></input>
					<input type="submit" value="Go"></input>
				</form>
			</div>
			<div class="<%= @controller.page_kind == 'home' ? 'homemenuitem' : 'menuitem' %>">
				<%= link_to "birdWalker", '/bird_walker/index' %>
			</div>
			<div class="<%= @controller.page_kind == 'home' ? 'homemenuitem' : 'menuitem' %>">
				<%= link_to "about", '/bird_walker/about' %>
			</div>
			<div class="<%= @controller.page_kind == 'location' ? 'locationmenuitem' : 'menuitem' %>">
				<%= link_to "locations", locations_url %>
			</div>
			<div class="<%= @controller.page_kind == 'location' ? 'locationmenuitem' : 'menuitem' %>">
				<%= link_to "counties", counties_url %>
			</div>
			<div class="<%= @controller.page_kind == 'location' ? 'locationmenuitem' : 'menuitem' %>">
				<%= link_to "states", states_url %>
			</div>
			<div class="<%= @controller.page_kind == 'species' ? 'speciesmenuitem' : 'menuitem' %>">
				<%= link_to "species", species_url %>
			</div>
			<div class="<%= @controller.page_kind == 'species' ? 'speciesmenuitem' : 'menuitem' %>">
				<%= link_to "families", families_url %>
			</div>
			<div class="<%= @controller.page_kind == 'trip' ? 'tripmenuitem' : 'menuitem' %>">
				<%= link_to "trips", trips_url %>
			</div>
			
			<% if (session[:username] != nil) then %>
				<div class="menuitem">
					logged in as  <%= session[:username] %>
				</div>
				<div class="menuitem">
					<%= link_to 'logout', :controller => 'bird_walker', :action => 'logout'%>
				</div>
			<% else %>
				<div class="menuitem">
					<%= link_to 'login', :controller => 'bird_walker', :action => 'login'%>
				</div>
			<% end %>
		</div>
		
		<% if params[:action] != 'index' %>
			<div id="browse">
				<%= link_to "&lt;&lt;", @previous_url %>
				<%= link_to "&gt;&gt;", @next_url %>
			</div>
		<% end %>
		
		<% if flash[:notice] %>
			<div id="notice"><%= flash[:notice] %></div>
		<% end %>

        <%= yield %>
     </body>
</html>