<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
		<%= stylesheet_link_tag 'stylesheet'%>
		<%= javascript_include_tag :defaults %>
        <title>birdWalker | <%= @page_title %></title>
    </head>
    <body onload="initialize()">
        <div id="menu">
			<div class='menuitem'>
				<%= link_to "birdWalker", '/bird_walker/index' %>
			</div>
			<div class="<%= @controller.isLocation ? 'locationmenuitem' : 'menuitem' %>">
				<%= link_to "locations", locations_url %>
			</div>
			<div class="<%= @controller.isSpecies ? 'speciesmenuitem' : 'menuitem' %>">
				<%= link_to "species", species_url %>
			</div>
			<div class="<%= @controller.isTrip ? 'tripmenuitem' : 'menuitem' %>">
				<%= link_to "trips", trips_url %>
			</div>
			<div class="menuitem">
				<%= link_to "about", '/bird_walker/about' %>
			</div>
		</div>
		
		<% if params[:action] != 'index' %>
			<div id="browse">
				<%= link_to "&lt;&lt;", @previous_url %>
				<%= link_to "&gt;&gt;", @next_url %>
			</div>
		<% end %>
		
		<% if flash[:notice] %>
			<div id="notice"><%= flash[:notice] %></div>
		<% end %>

        <%= yield %>
     </body>
</html>