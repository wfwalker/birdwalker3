<div class="lead">
	<%= @page_title %>
</div>                    

<div class="moduletitle">Listing posts</div>

<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, post_url(post) %></td>
    <td><%=h post.date %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>   
