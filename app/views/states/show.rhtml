<% @page_title = @state.name %>

<div id="pagebody">
	<div id="pageheader">
		<div id="pagetitle"><%= @page_title %></div>
	</div>

	<div id="pagecontent">
		<%= show_location_list(@state.locations) %>
	
		<%= show_species_list(@state.species) %>

		<%= show_trip_list(@state.trips) %>

		<div class="pagecontentmodule">
			<div class="moduletitle">Photos</div>
			<div class="pagecontentitem">
				<%= render :partial => 'sightings/thumbnail', :collection => @state.sightings_with_photos %>
			</div>
		</div>
	</div>
</div>