<div id="pagebody">
	<div id="pageheader">
		<div id="pagetitle"><%= @page_title %></div>
		<div class="pageheaderitem"><%= link_to 'Show', :action => 'show', :id => @species.id %></div>
	</div>

	<div id="pagecontent">
		<% form_tag :action => 'update', :id => @species do %>
		  <%= render :partial => 'form' %>
		  <%= submit_tag 'Edit' %>
		<% end %>
	</div>
</div>