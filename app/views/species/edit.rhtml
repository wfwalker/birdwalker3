<div id="pagebody">
	<div id="pageheader">
		<h1><%= @page_title %></h1>
	</div>

	<div id="pagecontent">
		<% form_tag :action => 'update', :id => @species do %>
		  <%= render :partial => 'form' %>
		  <%= submit_tag 'Edit' %>
		<% end %>

		<%= link_to 'Show', :action => 'show', :id => @species %> |
		<%= link_to 'Back', :action => 'list' %>
	</div>
</div>