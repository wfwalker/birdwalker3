	<div class="controls">
		<%= text_field 'species', 'abbreviation'  %>
	</div>
</div>

<div class="control-group">
	<label class="control-label" for="species_latin_name">Latin Name</label>
	<div class="controls">
		<%= text_field 'species', 'latin_name'  %>
	</div>
</div>

<div class="control-group">
	<label class="control-label" for="species_common_name">Common Name</label>
	<div class="controls">
		<%= text_field 'species', 'common_name'  %>
	</div>
</div>

<div class="control-group">
	<label class="control-label" for="species_reference_url">Reference URL</label>
	<div class="controls">
		<%= text_field 'species', 'reference_url'  %>
	</div>
</div>

