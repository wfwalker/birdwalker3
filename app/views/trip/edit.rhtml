<div id="pagebody">
	<div id="pageheader">
		<div id="pagetitle"><%= @page_title %></div id="pagetitle">
		<div class="pageheaderitem"><%= link_to 'Show', :action => 'show', :id => @trip.id %></div>
	</div>
	<div id="pagecontent">
		<% form_tag :action => 'update', :id => @trip do %>
  			<%= render :partial => 'form' %>
  			<%= submit_tag 'Edit' %>
		<% end %>
	</div>
</div>