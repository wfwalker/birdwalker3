<div id="pagebody">
	<div id="pageheader">
		<div id="pagetitle"><%= @page_title %></div>
		<div class="pageheaderitem"><%= link_to 'Show', location_url(@location) %></div>
	</div>
	
	<div id="pagecontent">
		<% form_tag :action => 'update', :id => @location do %>
		  <%= render :partial => 'form' %>
		  <%= submit_tag 'Edit' %>
		<% end %>
	</div>
</div>