<div id="pagebody">
	<div id="pageheader">
		<div id="pagetitle"><%= @page_title %></div>
		<div class="pageheaderitem"><%= link_to 'New', new_location_url %></div>
	</div>
	
	<div id="pagecontent">
		<% for @state in @locations_by_state.keys.sort %>
		    <h2><%= link_to State.find_by_abbreviation(@state).name, state_url(State.find_by_abbreviation(@state)) %></h2>
			<%= render :partial => 'locations/onelinelink', :collection => @locations_by_state[@state] %>
		<% end %>
	</div>
</div>