<%= error_messages_for 'location' %>

<!--[form:location]-->

<div class='row'>
	<div class="form-group col-md-6">
		<%= text_field 'location', 'name', :class => 'form-control', :placeholder => 'Name'  %>
	</div>
	<div class="form-group col-md-6">
		<%= text_field 'location', 'reference_url', :class => 'form-control', :placeholder => 'URL'  %>
	</div>
</div>
<div class='row'>
	<div class="form-group col-md-6">
		<div class='input-group'>
			<%= text_field 'location', 'latitude', :class => 'form-control', :placeholder => 'Lat'  %>
			<span class='input-group-addon'>lat</span>			
		</div>
	</div>
	<div class="form-group col-md-6">
		<%= text_field 'location', 'city', :class => 'form-control', :placeholder => 'City'  %>
	</div>
</div>
<div class='row'>
	<div class="form-group col-md-6">
		<div class='input-group'>
			<%= text_field 'location', 'longitude', :class => 'form-control', :placeholder => 'Long'  %>
			<span class='input-group-addon'>lon</span>	
		</div>		
	</div>
	<div class="form-group col-md-6">
		<%= collection_select("location", "county_id", County.find(:all, :order => 'name'), :id, :name, {:prompt => 'County'}, {:class => 'form-control'}) %>
	</div>
</div>

<div class='row'>
	<div class='form-group col-md-12'>
		<%= text_area 'location', 'notes', :class => 'form-control'  %>
	</div>
</div>

