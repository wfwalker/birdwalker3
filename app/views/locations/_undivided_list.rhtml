<div class="pagecontentmodule">
	<% if (show_headings) %>
		<div class="moduletitle"><%= location_list.size %> Location<%= location_list.size > 1? 's' : '' %></div>
	<% end %>
	
	<%= render :partial => 'locations/onelinelink' , :collection => location_list, :locals => { :show_extras => show_headings } %>
</div>