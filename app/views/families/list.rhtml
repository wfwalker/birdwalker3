<div id="pagebody">
	<div id="pageheader">
		<div id="pagetitle"><%= @page_title %></div>
	</div>
	
	<div id="pagecontent">
		<% for @family in @families do %>
			<%= render :partial => 'families/onelinelink', :object => @family %>
			
			<% if (@family.find_photo.size == 1) %>
				<%= link_to @family.find_photo[0].thumb, family_url(@family) %>
			<% end %>
		<% end %>
	</div>
</div>
