<div id="photos">
	<% @location.find_all_photos.each do | photoSighting | %>
		<div class="photo"><%= link_to photoSighting.thumb, :controller => 'sighting', :action => 'show', :id => photoSighting.id %></div>
	<% end %>
</div>

<div id="pagebody">
	<div id="pageheader">
		<div id="pagetitle"><%= @page_title %></div>
		<div class="pageheaderitem">
			<%= link_to @location.county + " County", :controller => "county", :action => 'show', :id => @location.county %>, 
			<%= link_to @location.find_state.name, :controller => "state", :action => 'show', :id => @location.find_state.id %>
		</div>
		<% if (@location.trips.size == 1) %>
			<% trip = @location.trips[0] %>
			<div class="pageheaderitem">Visited once on: <%= link_to nice_date(trip.ignored), :controller => 'trip', :action => 'show', :id => trip.id %></a></div>
		<% end %>
		<div class="pageheaderitem"><%= @location.notes %></div>
		<div class="pageheaderitem"><a href="<%= @location.referenceurl %>">See also...</a></div>
		<div class="pageheaderitem"><%= link_to 'Edit', :action => 'edit', :id => @location.id %></div>
	</div>
	<div id="pagecontent">
		<h2><%= @location.species.size %> Species</h2>

		<% @location.species.each do | species | %>
			<div class="pagecontentitem"><%= link_to species.commonname, :controller => 'species', :action => 'show', :id => species.id %></a></div>
		<% end %>
		
		<% if (@location.trips.size > 1) %>
			<h2><%= @location.trips.size %> Trips</h2>

			<% for @trip in @location.trips %>
			  <%= render_partial 'trip/onelinelink', @trip %>
			<% end %>
		<% end %>
	</div>
</div>