<% trip = summary %>

<p>
	<hr/>
	
	<h2>
		<%= link_to trip.name, trip_url(trip) %></a>,
		<%= trip.species.size %> species
		<br/>
		<%= short_nice_date(trip.date) %>
	</h2>
	
	<% has_photo?(trip) do %>
	<div class="pagecontentitem">	
		<%= render :partial => 'sightings/thumbnail', :object => trip.find_photo %>
	</div>
	<% end %>
	
	<div class="pagecontentitem">
		<%= trip.notes %>
	</div>
</p>