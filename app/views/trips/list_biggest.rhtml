<% @page_kind = "Index" %>
<% @page_title = "Biggest Days" %>

<div id="pagebody">
	<div id="pageheader">
		<div id="pagetitle"><%= @page_title %></div>
		
		<% editing_is_allowed?() do %>
			<div class="pageheaderitem"><%= link_to 'New', :action => 'new' %></div>
		<% end %>
	</div>


	<div id="pagecontent">
		                
		<%= render :partial => 'trips/undivided_list', :object => @trips, :locals => { :show_headings => true } %>
	</div>
</div>