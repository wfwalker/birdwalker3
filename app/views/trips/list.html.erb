<% editing_is_allowed?() do %>
	<div><%= link_to 'Add New Trip Report', :action => 'new' %></div>
<% end %>

<div class="lead">Trip Reports</div>

<% trip_lists = @trips/(@trips.size / 3 + 3) %>

<div class='row'>
	<% for trip_list in trip_lists do %>
		<div class='span4'>
			<%= show_trip_list(trip_list, false) %>
		</div>
	<% end %>
</div>           
