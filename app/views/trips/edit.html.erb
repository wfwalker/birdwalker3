<div id="pagebody">
	<div id="pageheader">
		<div id="pagetitle">
			<%= @page_title %> on <%= nice_date(@trip.date) %>, Led by <%= @trip.leader %>
		</div>
	</div>
	
	<div id="pagecontent">               
		<div class="pagecontentmodule">
			<div class="moduletitle">Trip Details</div>

			<div class="pagecontentitem">
				<% form_for @trip, :url => trip_path(@trip), :html => { :method => 'put' } do |form| %>
				  <%= render :partial => 'form' %>
				  <%= submit_tag 'Save' %>
				<% end %>
			</div>
		</div>
	</div>
</div>